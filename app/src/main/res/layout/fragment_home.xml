<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome,"
                android:textSize="26sp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daud"
                android:textSize="32dp"
                android:layout_marginTop="9dp"
                android:paddingLeft="8dp"
                android:textColor="#ff9800"
                android:layout_toRightOf="@+id/textview1"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/featured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview1"
                android:layout_marginTop="20dp"
                android:text="Featured Items"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />



            <HorizontalScrollView
                android:id="@+id/firstHorizontalScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/featured"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    android:id="@+id/firstLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="230dp"
                        android:layout_height="130dp"
                        android:background="@drawable/featured_items"
                        android:layout_marginLeft="15dp"
                        />

                    <RelativeLayout
                        android:id="@+id/bottomImage"
                        android:layout_width="230dp"
                        android:layout_height="55dp"
                        android:background="@drawable/featured_item2"
                        android:layout_below="@+id/image1"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/itemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Name"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            />

                        <ImageView
                            android:id="@+id/locationImage"
                            android:layout_below="@+id/itemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_remove_red_eye_24"
                            android:paddingLeft="10dp"
                            />


                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/itemName"
                            android:layout_toRightOf="@+id/locationImage"
                            android:text="Islamabad"
                            android:textSize="17sp"
                            android:paddingLeft="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$10/hr"
                            android:textColor="#ff9800"
                            android:layout_toRightOf="@+id/itemName"
                            android:layout_marginLeft="55dp"
                            android:textSize="15sp"
                            android:paddingTop="5dp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/itemName"
                            android:layout_toRightOf="@+id/location"
                            android:text="7th Mar"
                            android:textSize="15sp"
                            android:layout_marginLeft="30dp"
                            />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/topimage1"
                        android:layout_width="230dp"
                        android:layout_height="130dp"
                        android:background="@drawable/featured_items"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/image1"
                        />

                    <RelativeLayout
                        android:layout_width="230dp"
                        android:layout_height="55dp"
                        android:background="@drawable/featured_item2"
                        android:layout_toRightOf="@+id/bottomImage"
                        android:layout_below="@+id/topimage1"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/itemName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Name"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            />

                        <ImageView
                            android:id="@+id/locationImage1"
                            android:layout_below="@+id/itemName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_remove_red_eye_24"
                            android:paddingLeft="10dp"
                            />


                        <TextView
                            android:id="@+id/location1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/itemName1"
                            android:layout_toRightOf="@+id/locationImage1"
                            android:text="Islamabad"
                            android:textSize="17sp"
                            android:paddingLeft="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$10/hr"
                            android:textColor="#ff9800"
                            android:layout_toRightOf="@+id/itemName1"
                            android:layout_marginLeft="55dp"
                            android:textSize="15sp"
                            android:paddingTop="5dp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/itemName1"
                            android:layout_toRightOf="@+id/location1"
                            android:text="7th Mar"
                            android:textSize="15sp"
                            android:layout_marginLeft="30dp"
                            />

                    </RelativeLayout>

                </RelativeLayout>
            </HorizontalScrollView>




            <LinearLayout
                android:id="@+id/secondLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstHorizontalScroll"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yourItems"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Items"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all"
                    android:textSize="20sp"
                    android:textColor="#ff9800" />
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/secondHorizontalScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondLinear"
                android:layout_marginTop="10dp"
                >

                <RelativeLayout
                    android:id="@+id/mainRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/secondHorizontalScroll">

                    <ImageView
                        android:id="@+id/top"
                        android:layout_width="230dp"
                        android:layout_height="130dp"
                        android:background="@drawable/featured_items"
                        android:layout_marginLeft="15dp"
                        />
                    <RelativeLayout
                        android:id="@+id/itemRelative"
                        android:layout_width="230dp"
                        android:layout_height="55dp"
                        android:background="@drawable/featured_item2"
                        android:layout_below="@+id/top"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/seconditemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Name"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            />

                        <ImageView
                            android:id="@+id/eyeImage"
                            android:layout_below="@+id/seconditemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_remove_red_eye_24"
                            android:paddingLeft="10dp"
                            />


                        <TextView
                            android:id="@+id/eye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/seconditemName"
                            android:layout_toRightOf="@+id/eyeImage"
                            android:text="395"
                            android:textSize="17sp"
                            android:paddingLeft="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$10/hr"
                            android:textColor="#ff9800"
                            android:layout_toRightOf="@+id/seconditemName"
                            android:layout_marginLeft="55dp"
                            android:textSize="15sp"
                            android:paddingTop="5dp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/seconditemName"
                            android:layout_toRightOf="@+id/eye"
                            android:text="7th Mar"
                            android:textSize="15sp"
                            android:layout_marginLeft="90dp"
                            />

                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/top1"
                        android:layout_width="230dp"
                        android:layout_height="130dp"
                        android:background="@drawable/featured_items"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/top"
                        />
                    <RelativeLayout
                        android:id="@+id/itemRelative1"
                        android:layout_width="230dp"
                        android:layout_height="55dp"
                        android:background="@drawable/featured_item2"
                        android:layout_below="@+id/top1"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/itemRelative">

                        <TextView
                            android:id="@+id/seconditemName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Name"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            />

                        <ImageView
                            android:id="@+id/eyeImage1"
                            android:layout_below="@+id/seconditemName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_remove_red_eye_24"
                            android:paddingLeft="10dp"
                            />


                        <TextView
                            android:id="@+id/eye1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/seconditemName1"
                            android:layout_toRightOf="@+id/eyeImage1"
                            android:text="395"
                            android:textSize="17sp"
                            android:paddingLeft="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$10/hr"
                            android:textColor="#ff9800"
                            android:layout_toRightOf="@+id/seconditemName1"
                            android:layout_marginLeft="55dp"
                            android:textSize="15sp"
                            android:paddingTop="5dp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/seconditemName1"
                            android:layout_toRightOf="@+id/eye1"
                            android:text="7th Mar"
                            android:textSize="15sp"
                            android:layout_marginLeft="90dp"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/thirdLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/secondHorizontalScroll"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recentItems"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Items"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"/>

            </LinearLayout>


            <HorizontalScrollView
                android:id="@+id/thirdHorizontalScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thirdLinear"
                android:layout_marginTop="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/realtivetop"
                        android:layout_width="230dp"
                        android:layout_height="130dp"
                        android:background="@drawable/featured_items"
                        android:layout_marginLeft="15dp"
                        />
                    <RelativeLayout
                        android:id="@+id/recentRelative"
                        android:layout_width="230dp"
                        android:layout_height="55dp"
                        android:background="@drawable/featured_item2"
                        android:layout_below="@+id/realtivetop"
                        android:layout_marginLeft="15dp"

                        android:layout_marginBottom="100dp">

                        <TextView
                            android:id="@+id/recentitemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Name"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            />

                        <ImageView
                            android:id="@+id/recenteyeImage"
                            android:layout_below="@+id/recentitemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_remove_red_eye_24"
                            android:paddingLeft="10dp"
                            />


                        <TextView
                            android:id="@+id/recenteye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recentitemName"
                            android:layout_toRightOf="@+id/recenteyeImage"
                            android:text="395"
                            android:textSize="17sp"
                            android:paddingLeft="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$10/hr"
                            android:textColor="#ff9800"
                            android:layout_toRightOf="@+id/recentitemName"
                            android:layout_marginLeft="55dp"
                            android:textSize="15sp"
                            android:paddingTop="5dp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recentitemName"
                            android:layout_toRightOf="@+id/recenteye"
                            android:text="7th Mar"
                            android:textSize="15sp"
                            android:layout_marginLeft="90dp"
                            />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/realtivetop1"
                        android:layout_width="230dp"
                        android:layout_height="130dp"
                        android:background="@drawable/featured_items"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/realtivetop"
                        />
                    <RelativeLayout
                        android:id="@+id/recentRelative1"
                        android:layout_width="230dp"
                        android:layout_height="55dp"
                        android:background="@drawable/featured_item2"
                        android:layout_below="@+id/realtivetop1"
                        android:layout_toRightOf="@+id/recentRelative"
                        android:layout_marginLeft="15dp"

                        android:layout_marginBottom="100dp">

                        <TextView
                            android:id="@+id/recentitemName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Name"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            />

                        <ImageView
                            android:id="@+id/recenteyeImage1"
                            android:layout_below="@+id/recentitemName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_remove_red_eye_24"
                            android:paddingLeft="10dp"
                            />


                        <TextView
                            android:id="@+id/recenteye1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recentitemName1"
                            android:layout_toRightOf="@+id/recenteyeImage1"
                            android:text="395"
                            android:textSize="17sp"
                            android:paddingLeft="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$10/hr"
                            android:textColor="#ff9800"
                            android:layout_toRightOf="@+id/recentitemName1"
                            android:layout_marginLeft="55dp"
                            android:textSize="15sp"
                            android:paddingTop="5dp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recentitemName1"
                            android:layout_toRightOf="@+id/recenteye1"
                            android:text="7th Mar"
                            android:textSize="15sp"
                            android:layout_marginLeft="90dp"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </HorizontalScrollView>






        </RelativeLayout>

    </ScrollView>

</RelativeLayout>