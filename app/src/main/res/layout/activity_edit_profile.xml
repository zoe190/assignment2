<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_profile"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_toRightOf="@id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Edit profile"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_toRightOf="@id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Save Changes"
        android:textColor="#FF9800"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="5dp"
        />

    <View
        android:id="@+id/marginLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp"
        android:background="#CCC" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/marginLine"
        android:textColor="#FF454545"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/name"
        android:layout_marginRight="10dp"
        android:background="@drawable/textbackground"
        android:ems="10"
        android:inputType="text"
        android:padding="12dp"
        android:text="Daud"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/editname"
        android:textColor="#FF454545"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editemail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/email"
        android:layout_marginRight="10dp"
        android:background="@drawable/textbackground"
        android:ems="10"
        android:inputType="text"
        android:padding="12dp"
        android:text="daud@gmail.com"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/editemail"
        android:textColor="#FF454545"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editcontact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/contact"
        android:layout_marginRight="10dp"
        android:background="@drawable/textbackground"
        android:ems="10"
        android:inputType="text"
        android:padding="12dp"
        android:text="124381627"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Country Name"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/editcontact"
        android:textColor="#FF454545"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/firstLinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/textbackground"
        android:layout_marginTop="7dp"
        >

        <TextView
            android:id="@+id/bestmatch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marginline"
            android:text="Enter Country"
            android:textSize="22sp"
            android:textColor="#000000"
            android:padding="8dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:paddingTop="12dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="200dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City Name"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/firstLinear1"
        android:textColor="#FF454545"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/firstLinear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/textbackground"
        android:layout_marginTop="7dp"
        >

        <TextView
            android:id="@+id/bestmatch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marginline"
            android:text="Enter Country"
            android:textSize="22sp"
            android:textColor="#000000"
            android:padding="8dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:paddingTop="12dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="200dp"
            />
    </LinearLayout>

</RelativeLayout>