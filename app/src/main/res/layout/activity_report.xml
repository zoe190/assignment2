<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".report"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_toRightOf="@id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Report"
        />
    <View
        android:id="@+id/marginLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp"
        android:background="#CCC" />
    <TextView
        android:id="@+id/enterCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/marginLine"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:text="Reason for Reporting"
        android:textColor="#3E3C3C"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_below="@id/enterCodeTextView"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/textbackground"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:text="Enter Report here             " />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/button"
        android:text="Submit Report"
        android:layout_below="@id/editTextTextMultiLine"
        app:backgroundTint="#ff9800"
        android:textColor="#F8F5F5"
        android:textSize="20sp"
        android:textStyle="bold"
        />



</RelativeLayout>