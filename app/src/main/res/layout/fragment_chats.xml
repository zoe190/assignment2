<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    tools:context=".Chats">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:text="Chat"
                android:layout_marginTop="5dp"
                />
            <View
                android:id="@+id/marginLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/textView3"
                android:layout_marginTop="10dp"
                android:background="#CCC" />

            <RelativeLayout
                android:id="@+id/Relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/marginLine"
                android:layout_marginRight="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circularView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/person1"
                    android:contentDescription="Image"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#000000"/>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/circularView"
                    android:text="Makenna Dias"
                    android:textSize="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 new message"
                    android:layout_toRightOf="@id/circularView"
                    android:layout_below="@id/text"
                    android:layout_marginLeft="16dp"
                    android:textSize="20dp"
                    android:textColor="#ff9800"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_chevron_right_24"
                    android:layout_toRightOf="@id/text"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="60dp"
                    />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/bar1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/circularView" />
                <View
                    android:id="@+id/marginline2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#AAA8A8"
                    android:layout_below="@id/bar1" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/Relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/Relative1"
                android:layout_marginRight="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circularView2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/person1"
                    android:contentDescription="Image"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#000000"/>

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/circularView2"
                    android:text="Miracle Philips"
                    android:textSize="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No new message"
                    android:layout_toRightOf="@id/circularView2"
                    android:layout_below="@id/textview"
                    android:layout_marginLeft="16dp"
                    android:textSize="20dp"
                    android:textColor="#777471"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_chevron_right_24"
                    android:layout_toRightOf="@id/textview"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp"
                    />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/bar2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/circularView2" />
                <View
                    android:id="@+id/marginline3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#AAA8A8"
                    android:layout_below="@id/bar2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/Relative2"
                android:layout_marginRight="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circularView3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/person1"
                    android:contentDescription="Image"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#000000"/>

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/circularView3"
                    android:text="zaire Gouse"
                    android:textSize="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No new message"
                    android:layout_toRightOf="@id/circularView3"
                    android:layout_below="@id/textview1"
                    android:layout_marginLeft="16dp"
                    android:textSize="20dp"
                    android:textColor="#777471"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_chevron_right_24"
                    android:layout_toRightOf="@id/textview1"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="90dp"
                    />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/bar3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/circularView3" />
                <View
                    android:id="@+id/marginline4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#AAA8A8"
                    android:layout_below="@id/bar3" />
            </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>