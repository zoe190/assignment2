<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Find Exactly What You Need!"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        />
        <androidx.cardview.widget.CardView
            android:id="@+id/searchCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_search_24"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />

            <!-- Search Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Recent Searches"
            android:layout_below="@id/textView3"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Item Number One"
                android:layout_below="@id/textView4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#191919"
                />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_north_east_24"
            android:layout_toRightOf="@id/textView5"
            android:layout_marginTop="229dp"
            android:layout_marginLeft="150dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Item Number Two"
            android:layout_below="@id/textView5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#191919"
            />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_north_east_24"
            android:layout_toRightOf="@id/textView6"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="150dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Popular Searches"
            android:layout_below="@id/textView6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Item Number One"
            android:layout_below="@id/textView7"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#191919"
            />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_north_east_24"
            android:layout_toRightOf="@id/textView8"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="150dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Item Number Two"
            android:layout_below="@id/textView8"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#191919"
            />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_north_east_24"
            android:layout_toRightOf="@id/textView9"
            android:layout_marginTop="405dp"
            android:layout_marginLeft="150dp"
            android:padding="10dp"/>



</RelativeLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="20dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="10dp"
        app:itemIconTint="#ff9800"
        >
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/button_nav"
            android:layout_marginEnd="16dp"
            app:itemIconTint="@drawable/icon"
            app:itemTextColor="@drawable/title"
            />


    </com.google.android.material.bottomappbar.BottomAppBar>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="#ff9800"
        app:layout_anchor="@id/bottombar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>